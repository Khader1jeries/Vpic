#:kivy 2.0.0

<UploadScreen>:
    name: 'upload'
    BoxLayout:
        orientation: 'vertical'
        padding: 20
        spacing: 15

        Label:
            text: "Upload Images"
            font_size: '24sp'
            size_hint_y: None
            height: '40dp'

        # Upload area
        BoxLayout:
            orientation: 'vertical'
            spacing: 20
            padding: 20

            Image:
                source: 'atlas://data/images/defaulttheme/filechooser_folder'
                size_hint: None, None
                size: '150dp', '150dp'
                pos_hint: {'center_x': 0.5}

            Label:
                text: "Select an image or folder to upload"
                font_size: '18sp'

            # Upload buttons
            BoxLayout:
                orientation: 'horizontal'
                spacing: 10
                size_hint_y: None
                height: '50dp'

                Button:
                    text: "Browse Files"
                    background_color: 0.2, 0.6, 0.8, 1
                    background_normal: ''
                    on_press: root.show_file_chooser()

                Button:
                    text: "Select Folder"
                    background_color: 0.2, 0.8, 0.6, 1
                    background_normal: ''
                    on_press: root.show_folder_chooser()