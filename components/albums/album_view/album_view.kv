#:kivy 2.0.0

<AlbumViewScreen>:
    name: 'album_view'
    BoxLayout:
        orientation: 'vertical'
        padding: 10
        spacing: 10

        # Album header
        BoxLayout:
            orientation: 'vertical'
            size_hint_y: None
            height: '120dp'
            padding: 10
            spacing: 5
            canvas.before:
                Color:
                    rgba: 0.2, 0.3, 0.4, 1  # Dark blue-gray color
                Rectangle:
                    pos: self.pos
                    size: self.size

            # Album title and back button
            BoxLayout:
                orientation: 'horizontal'
                size_hint_y: None
                height: '40dp'

                Button:
                    text: "< Back to Albums"
                    size_hint_x: 0.3
                    background_color: 0.3, 0.5, 0.7, 1
                    background_normal: ''
                    on_press: root.go_back()

                Label:
                    id: album_title
                    text: root.album_name
                    font_size: '20sp'
                    size_hint_x: 0.7
                    color: 1, 1, 1, 1
                    bold: True
                    halign: 'left'
                    text_size: self.width, None

            # Album description
            Label:
                id: album_description
                text: root.album_description
                font_size: '14sp'
                size_hint_y: None
                height: '60dp'
                color: 0.9, 0.9, 0.9, 1
                halign: 'left'
                valign: 'top'
                text_size: self.width, self.height

        # Images section label
        Label:
            text: "Images"
            font_size: '18sp'
            size_hint_y: None
            height: '30dp'
            halign: 'left'
            text_size: self.width, None

        # Images grid (main content area)
        ScrollView:
            GridLayout:
                id: images_grid
                cols: 3  # Show 3 images per row
                spacing: 10
                padding: 10
                size_hint_y: None
                height: self.minimum_height
                # Images will be added here dynamically